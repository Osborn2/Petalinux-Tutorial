//tips

1. edit path
    export PATH=$PATH:/bin
2. provide permission for some appication
    mkdir /var/run/console
    touch /var/run/console/yourusername
    chmod +s /sbin/reboot
    chmod +s /sbin/halt
3. automatically mount devices
    e.g. /etc/fstab
    /dev/mmcblk0p1  /mnt    ext3    defaults    1   2 (P236)
